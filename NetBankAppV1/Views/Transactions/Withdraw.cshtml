@model NetBankAppV1.Models.Transaction

<h4>Withdraw</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <span><strong>Account Number: </strong> </span>
                @ViewBag.Accounts
            </div><br>
            <div>
                <span><strong>Account Balance: $</strong> </span>
                @ViewBag.Balance
            </div><br>
            @if (ViewBag.OverDraft != null)
            {
                <div>
                    <span><strong>Over draft amount: $</strong> </span>
                    @ViewBag.OverDraft
                </div><br>
            }
            @if (ViewBag.TermDepositMsg != null)
            {@ViewBag.TermDepositMsg}
            <div class="form-group">
                <label asp-for="amount" class="control-label">Amount</label>
                @if (ViewBag.ErrorMessage != null)
                {
                    <p>@ViewBag.ErrorMessage</p>
                }
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Withdraw" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Accounts" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
