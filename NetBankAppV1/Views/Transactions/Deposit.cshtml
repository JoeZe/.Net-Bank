@model NetBankAppV1.Models.Transaction

<h4>Deposit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<input type="hidden" asp-for="TranId" />-->
            <div>
                <span><strong>Account Number: </strong> </span>
                @ViewBag.Accounts
            </div><br>
            <div>
                <span><strong>Account Balance: $</strong> </span>
                @ViewBag.Balance
            </div><br>

            <div class="form-group">
                <label asp-for="amount" class="control-label">Amount</label>
                @if (ViewBag.ErrorMessage != null)
                {
                    <p>@ViewBag.ErrorMessage</p>
                }
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Accounts" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
